#:kivy 1.9.0

<MenuScreen>:
    font_size: 14

    Button:
        text: 'Quizz'
        size_hint: .35, .15
        pos_hint: {'center_x': .5, 'center_y': .70}
        halign: 'center'
        valign: 'middle'
        font_size: root.font_size
        on_release: root.run_quizz()

    Button:
        text: 'Voc'
        size_hint: .35, .15
        pos_hint: {'center_x': .5, 'center_y': .5}
        halign: 'center'
        valign: 'middle'
        font_size: root.font_size
        on_release: root.run_voclist()

    Button:
        text: 'Settings'
        size_hint: .35, .15
        pos_hint: {'center_x': .5, 'center_y': .30}
        halign: 'center'
        valign: 'middle'
        font_size: root.font_size
        on_release: root.run_settings()

